<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="15dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:strokeWidth="1dp"
    android:clickable="true"
    android:id="@+id/card_view"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Trip Image -->
        <ImageView
            android:id="@+id/trip_image"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/trip_text_container"
            tools:src="@tools:sample/backgrounds/scenic"/>

        <!-- Text Container -->
        <LinearLayout
            android:id="@+id/trip_text_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="12dp"
            app:layout_constraintStart_toEndOf="@id/trip_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Destination -->
            <TextView
                android:id="@+id/trip_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paris"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textStyle="bold"/>

            <!-- Dates -->
            <TextView
                android:id="@+id/trip_dates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dec 24 - Jan 1"
                android:textAppearance="?attr/textAppearanceBody2"
                android:layout_marginTop="4dp"/>

            <!-- Status -->
            <TextView
                android:id="@+id/trip_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upcoming"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textStyle="bold"
                android:layout_marginTop="6dp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
